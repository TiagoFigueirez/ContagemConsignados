<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ContagemConsignados.Mvvm.View.PreviousCount"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CONTAGENS ANTERIORES">
    <VerticalStackLayout>
        <Grid Margin="10,5">
            <Label
                Grid.Column="0"
                FontSize="20"
                HorizontalOptions="Start"
                Text="CONTAGENS FEITAS"
                VerticalOptions="Center" />

        </Grid>
        <CollectionView
            Margin="10"
            ItemSizingStrategy="MeasureFirstItem"
            ItemsSource="{Binding Counts}"
            SelectionMode="None">
            <CollectionView.Header>
                <Grid
                    Padding="8"
                    BackgroundColor="#DDD"
                    ColumnDefinitions="*,*,*,Auto">

                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        Text="Número" />

                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Text="Observação" />

                    <Label
                        Grid.Column="2"
                        FontAttributes="Bold"
                        Text="Data da Contagem" />

                </Grid>
            </CollectionView.Header>


            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Grid
                        Padding="8"
                        BackgroundColor="#EEE"
                        ColumnDefinitions="*,*,*,Auto">

                        <Label Grid.Column="0" Text="{Binding Id}" />
                        <Label Grid.Column="1" Text="{Binding Observer}" />
                        <Label Grid.Column="2" Text="{Binding DataValidade}" />

                        <Button
                            Grid.Column="3"
                            FontAttributes="Bold"
                            FontSize="15"
                            Text="-&gt;" />

                    </Grid>


                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>