<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ContagemConsignados.Mvvm.View.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPagexaml">
    <VerticalStackLayout>
        <Image
            BackgroundColor="#F3F4F6"
            HeightRequest="120"
            HorizontalOptions="Center"
            Source="logo.png" />

        <!--  Título  -->
        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalTextAlignment="Center"
            Text="Contagem de Consignados"
            TextColor="#1F2937" />

        <Label
            FontSize="14"
            HorizontalTextAlignment="Center"
            Text="Entre com sua conta corporativa"
            TextColor="Gray" />

        <!--  Botão Login Microsoft  -->
        <Button
            BackgroundColor="#0078D4"
            Clicked="OnLoginClicked"
            CornerRadius="10"
            FontAttributes="Bold"
            HeightRequest="50"
            Text="Entrar com Microsoft 365"
            TextColor="White" />

        <!--  Indicador de carregamento  -->
        <ActivityIndicator
            x:Name="LoadingIndicator"
            HorizontalOptions="Center"
            IsRunning="False"
            IsVisible="False"
            Color="#0078D4" />

    </VerticalStackLayout>
</ContentPage>