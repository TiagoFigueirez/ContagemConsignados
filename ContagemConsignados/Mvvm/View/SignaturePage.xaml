<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ContagemConsignados.Mvvm.View.SignaturePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ASSINAR CONTAGEM">
    <VerticalStackLayout>
        <Label FontAttributes="Bold" Text="Assinatura do Conferente" />

        <Border HeightRequest="200">
            <GraphicsView x:Name="SegnatureConferente" Drawable="{Binding SignatureDrawableConferente}" />
        </Border>

        <Label FontAttributes="Bold" Text="Assinatura do Cliente" />

        <Border HeightRequest="200">
            <GraphicsView x:Name="SegnatureCliente" Drawable="{Binding SignatureDrawableCliente}" />
        </Border>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">

            <Button Clicked="Button_Clicked" Text="Limpar" />
            <Button Clicked="OnSaveClicked" Text="Salvar" />

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>