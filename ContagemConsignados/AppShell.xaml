<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContagemConsignados.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ContagemConsignados.Mvvm.View"
    Title="ContagemConsignados"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Nova Contagem"
            ContentTemplate="{DataTemplate views:NewCount}"
            Route="NewCount" />

        <ShellContent
            Title="Contagens Anteriores"
            ContentTemplate="{DataTemplate views:PreviousCount}"
            Route="PreviousCount" />

    </FlyoutItem>

</Shell>
